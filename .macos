# Modifier key symbols: @ = Cmd, ~ = Option, ^ = Control, $ = Shift

###############################################################################
# Disable Spotlight Keyboard Shortcuts (Cmd+Space)
# Note: Frees up Cmd+Space for Raycast or other launchers
###############################################################################

# Spotlight shortcuts are in com.apple.symbolichotkeys:
#   Key 64 = "Show Spotlight search" (Cmd+Space)
#   Key 65 = "Show Finder search window" (Cmd+Option+Space)
#
# On fresh macOS installs, these entries may not exist until the user interacts
# with System Settings, so we use PlistBuddy to create/set them idempotently.

SPOTLIGHT_PLIST="$HOME/Library/Preferences/com.apple.symbolichotkeys.plist"

disable_spotlight_shortcuts() {
    # Disable "Show Spotlight search" (Cmd+Space) - key 64
    # Structure: enabled=false, value.parameters=[65535, 49, 1048576], type=standard
    /usr/libexec/PlistBuddy "$SPOTLIGHT_PLIST" \
        -c "Delete :AppleSymbolicHotKeys:64" \
        -c "Add :AppleSymbolicHotKeys:64:enabled bool false" \
        -c "Add :AppleSymbolicHotKeys:64:value:parameters array" \
        -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 65535" \
        -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 49" \
        -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 1048576" \
        -c "Add :AppleSymbolicHotKeys:64:value:type string standard" 2>/dev/null || {
        # Entry might not exist yet on fresh install; try Add without Delete
        /usr/libexec/PlistBuddy "$SPOTLIGHT_PLIST" \
            -c "Add :AppleSymbolicHotKeys:64:enabled bool false" \
            -c "Add :AppleSymbolicHotKeys:64:value:parameters array" \
            -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 65535" \
            -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 49" \
            -c "Add :AppleSymbolicHotKeys:64:value:parameters: integer 1048576" \
