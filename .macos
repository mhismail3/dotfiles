#!/usr/bin/env bash

# ~/.macos — macOS preferences for moose-home-server
# Run LAST by fresh.sh (restarts system processes at the end)

DOTFILES_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Finder/Sidebar configuration toggles
: "${FINDER_CONFIGURE_SIDEBAR:=1}"
: "${RESET_DS_STORE:=1}"
: "${FINDER_FORCE_RELOAD:=1}"

# sidebarctl install knobs
: "${SIDEBARCTL_INSTALL_DIR:=}"
: "${SIDEBARCTL_SOURCE:="$DOTFILES_DIR/bin/sidebarctl.swift"}"

###############################################################################
# Preamble
###############################################################################

# Close System Settings to prevent it from overriding settings
osascript -e 'tell application "System Preferences" to quit' 2>/dev/null || true
osascript -e 'tell application "System Settings" to quit' 2>/dev/null || true

# Ask for the administrator password upfront
# Use /dev/tty to ensure password prompt works even when stdin is piped
sudo -v < /dev/tty

# Keep-alive: update existing `sudo` timestamp until script has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Note: Some settings may require Full Disk Access for Terminal.app in:
# System Settings → Privacy & Security → Full Disk Access

###############################################################################
# Computer Identity
###############################################################################

# Use environment variable from start.sh, or default
COMPUTER_NAME="${COMPUTER_NAME:-$(scutil --get ComputerName 2>/dev/null || echo 'My-Mac')}"
MACOS_USER="${MACOS_USER:-$(whoami)}"

# LocalHostName must be a valid DNS name (no spaces, apostrophes, or special chars)
# Convert "Moose's Mac mini" -> "Mooses-Mac-mini"
LOCAL_HOST_NAME=$(echo "$COMPUTER_NAME" | sed "s/'//g" | sed 's/ /-/g' | sed 's/[^a-zA-Z0-9-]//g')

echo "Setting computer name to: $COMPUTER_NAME"
echo "Setting local hostname to: $LOCAL_HOST_NAME"

sudo scutil --set ComputerName "$COMPUTER_NAME"
sudo scutil --set HostName "$LOCAL_HOST_NAME"
sudo scutil --set LocalHostName "$LOCAL_HOST_NAME"
sudo defaults write /Library/Preferences/SystemConfiguration/com.apple.smb.server NetBIOSName -string "$LOCAL_HOST_NAME"

###############################################################################
# Remote Access (SSH + Screen Sharing)
###############################################################################

# Enable Remote Login (SSH)
# Note: On newer macOS, this may require enabling in System Settings manually
# or granting Full Disk Access to Terminal
sudo systemsetup -setremotelogin on 2>/dev/null || {
    echo "⚠️  Could not enable SSH via systemsetup."
    echo "   Please enable manually: System Settings → General → Sharing → Remote Login"
}

# Restrict SSH to specific user
sudo dseditgroup -o create -q com.apple.access_ssh 2>/dev/null || true
sudo dseditgroup -o edit -a "$MACOS_USER" -t user com.apple.access_ssh 2>/dev/null || true

# Enable Screen Sharing
# Note: Modern macOS requires enabling this in System Settings
sudo launchctl load -w /System/Library/LaunchDaemons/com.apple.screensharing.plist 2>/dev/null || {
    echo "⚠️  Could not enable Screen Sharing via launchctl."
    echo "   Please enable manually: System Settings → General → Sharing → Screen Sharing"
}

# Enable Remote Management (ARD)
# Note: kickstart may require SIP disabled or MDM on newer macOS
if [[ -f "/System/Library/CoreServices/RemoteManagement/ARDAgent.app/Contents/Resources/kickstart" ]]; then
    sudo /System/Library/CoreServices/RemoteManagement/ARDAgent.app/Contents/Resources/kickstart \
        -activate -configure -access -on \
        -restart -agent -privs -all 2>/dev/null || {
        echo "⚠️  Could not configure Remote Management."
        echo "   Please enable manually: System Settings → General → Sharing → Remote Management"
    }
fi

###############################################################################
# Power Management (always-on server)
###############################################################################

# Prevent system sleep (0 = never)
sudo pmset -a sleep 0

# Display sleep after 10 minutes (set to 0 for never)
sudo pmset -a displaysleep 10

# Prevent disk sleep
sudo pmset -a disksleep 0

# Wake on network access (Magic Packet)
sudo pmset -a womp 1

# Auto restart after power failure
sudo pmset -a autorestart 1

# Disable hibernation (speeds up sleep/wake for desktop)
sudo pmset -a hibernatemode 0

# Restart automatically if the computer freezes
sudo systemsetup -setrestartfreeze on 2>/dev/null || true

# Note: On Apple Silicon Macs, some power settings behave differently
# Check current settings with: pmset -g

