{
  "name": "new-project",
  "description": "Create a complete portfolio project entry and blog post for a new project",
  "version": "1.0.0",
  "author": "Mohsin Ismail",
  "invocation": {
    "type": "user"
  },
  "arguments": [
    {
      "name": "github_url",
      "description": "GitHub repository URL (optional)",
      "required": false,
      "type": "string"
    },
    {
      "name": "title",
      "description": "Project title",
      "required": false,
      "type": "string",
      "flag": "--title"
    },
    {
      "name": "summary",
      "description": "Brief project description for portfolio card",
      "required": false,
      "type": "string",
      "flag": "--summary"
    },
    {
      "name": "context",
      "description": "Additional context for blog post narrative",
      "required": false,
      "type": "string",
      "flag": "--context"
    },
    {
      "name": "tags",
      "description": "Comma-separated list of technology tags",
      "required": false,
      "type": "string",
      "flag": "--tags"
    },
    {
      "name": "status",
      "description": "Project status indicator",
      "required": false,
      "type": "string",
      "flag": "--status",
      "default": "ðŸ”„ Active"
    },
    {
      "name": "live",
      "description": "Live demo URL",
      "required": false,
      "type": "string",
      "flag": "--live"
    },
    {
      "name": "date",
      "description": "Publication date (YYYY-MM-DD)",
      "required": false,
      "type": "string",
      "flag": "--date"
    }
  ],
  "examples": [
    {
      "command": "/new-project https://github.com/username/awesome-project",
      "description": "Create portfolio entry and blog post from GitHub repo"
    },
    {
      "command": "/new-project https://github.com/username/cli-tool --context \"Evolution from my previous browser-based tools\"",
      "description": "Create with additional narrative context"
    },
    {
      "command": "/new-project --title \"Custom Project\" --summary \"A unique tool\" --tags \"JavaScript,React,Node.js\"",
      "description": "Create without GitHub repo"
    }
  ],
  "tags": [
    "documentation",
    "portfolio",
    "blog",
    "project-management"
  ]
}
